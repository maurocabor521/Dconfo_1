<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:id="@+id/ll_item_ejercicio">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id Ejercicio"
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_deber_idejercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="id Ejercicio"
            android:text=""
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight=".8"
            android:textColor="@android:color/white"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo Deber"
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_deber_tipodeber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo Deber"
            android:text=""
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight=".8"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo Actividad"
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_actividad_tipodeber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo Actividad"
            android:text=""
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight=".8"
            android:textColor="@android:color/white"/>

    </LinearLayout>




</LinearLayout>

</android.support.v7.widget.CardView>