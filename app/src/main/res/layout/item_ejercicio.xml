<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_margin="5dp"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id Ejercicio"
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_ejercicioId_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="id Ejercicio"
            android:text=""
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight=".8"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id Docente"
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_docenteId_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="id Docente"
            android:text=""
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight=".8"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Ejercicio"
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_ejercicioNombre_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Ejercicio"
            android:text=""
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight=".8"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actividad"
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_ejercicioActividad_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Actividad"
            android:text=""
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight=".8"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/txt_ejercicioTipo_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo"
            android:text=""
            android:textSize="@dimen/tsize_documento"
            android:textStyle="bold"
            android:layout_weight=".8"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>